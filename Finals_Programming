using System;
using System.Collections.Generic;

namespace Finals
{
    class Program
    {
        static DateTime getcal = DateTime.Now;
        static void Main(string[] args)
        {

            while (true)
            {
                // Main Menu 
                ShowMainMenu();

                int userOption = GetUserOption();

                if (userOption == 1)
                {

                    {
                        Console.WriteLine("\u001b[31;1m\nYou've Selected to View Historical Events\n\u001b[0m");

                        // Getting Specific Value in DateTime
                        int year = getcal.Year;
                        int month = getcal.Month;
                        int day = getcal.Day;
                        int hour = getcal.Hour;
                        int min = getcal.Minute;

                        GetCurrentTimeDate(hour, min, month, day, year);

                        GetHour(hour);

                        GetHolidays(month);
                    }

                    
                    AccessMainMenu();


                }

                else if (userOption == 2)
                {
                    GuessingGame();

                    AccessMainMenu();


                }

                else if (userOption == 3)
                {
                    BirthdayCalcu();
                    AccessMainMenu();

                }

                else
                {
                    Console.WriteLine("Please choose between 1 - 3 only.");
                }
            }
        }

        static void ShowMainMenu()
        {
            Console.WriteLine("\n ====================================");
            Console.WriteLine(" =    \u001b[33;1mWelcome to HISTORICALCULENDAR\u001b[0m    =");
            Console.WriteLine(" ====================================\n");
            Console.WriteLine("             _________");
            Console.WriteLine("            |\x1B[4mMain Menu\u001b[0m|");
            Console.WriteLine(" \n  _________________________________");
            Console.WriteLine(" |\x1B[4mPress \u001b[31m1\u001b[37m to View Historical Events\u001b[0m|");
            Console.WriteLine(" |\x1B[4mPress \u001b[36m2\u001b[37m to Play Mini game        \u001b[0m|");
            Console.WriteLine(" |\x1B[4mPress \u001b[32m3\u001b[37m to Calculate your Age    \u001b[0m|");
        }

        static int GetUserOption()
        {
            int opt = Convert.ToInt32(Console.ReadLine());
            return opt;
        }

        static void GetCurrentTimeDate(int hour, int min, int month, int day, int year)
        {
            // Current time and date
            Console.WriteLine("Time: \t" + hour + ":" + min);
            Console.WriteLine("Date: \t" + month + "/" + day + "/" + year);
        }

        static void GetHour(int hour)
        {
            // Greetings that depends on current time
            if (hour < 12)
            {
                Console.WriteLine("\n\u001b[33mGood Morning!\u001b[0m");
            }

            else if (hour < 17 && !(hour == 12))
            {
                Console.WriteLine("\n\u001b[32;1mGood Afternoon!\u001b[0m");
            }
            else if (hour == 12)
            {
                Console.WriteLine("\n\u001b[31;1mGood Noon!\u001b[0m");
            }
            else
            {
                Console.WriteLine("\n\u001b[34mGood Evening!\u001b[0m");
            }
        }

        static void GetHolidays(int month)
        {
            if (month == 1)
            {
