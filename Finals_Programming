                }

                Console.WriteLine("Do you want to try Historical Events again [Y/N]?");
                rpt = Console.ReadKey().KeyChar;

            }
            while (rpt == 'y' || rpt == 'Y');

        }

        static void AccessMainMenu()
        {
            Console.WriteLine("\nDo you want to go back to Main Menu [Y/N]?");
            char MainMenus = GetYesNo();

            if (MainMenus == 'y')
            {
                // continue with the current loop or operation
            }
            else if (MainMenus == 'n')
            {
                Console.WriteLine("\nThank you for using HISTORICALCULENDAR");
                Environment.Exit(0);
            }
            else
            {
                Console.WriteLine("\nInvalid input. Please try again.");
                AccessMainMenu();
            }
        }

        static void GuessingGame()
        {
            Console.WriteLine("\u001b[36mYou've chosen to Play the Mini Game\u001b[0m");

            string[] holidays = new string[] { "New Year's Day", "Special non-working day after New Year", "Lunar New Year's Day",
                "First Philippine Republic Day", "Lailatul Isra Wal Mi Raj (Tentative Date)", "People Power Anniversary", "March Equinox", "Maundy Thursday", "Good Friday", "Easter Sunday and The Day of Valor", "Labor Day",
                 "Independence Day", "Eid al-Adha (Feast of the Sacrifice) (Tentative Date)", "Eid al-Adha Day 2 (Tentative Date)", "Amun Jadid, (Muslim) Common Local Holiday", "Ninoy Aquino Day", "National Heroes Day", "Yamashita Surrender Day", "Feast of the Nativity of Mary",
                 "Maulid un-Nabi (Tentative Date)", "All Saints' Day", "All Souls' Day", "Bonifacio Day", "Bonifacio Day", "Feast of the Immaculate Conception", "Christmas Eve",
                 "Christmas Day", "Rizal Day", "New Year's Eve"};
            string[] holidayDates = new string[] { "January 1", "January 2", "January 22", "January 23", "February 18", "February 25",
                "March 21", "April 6", "April 7", "April 9", "May 1", "June 12", "June 29", "July 10", "July 19", "August 21", "August 28", "September 3", "September 8",
            "September 27", "November 1", "November 2", "November 27", "November 30", "December 8", "December 24", "December 25", "December 30", "December 31"};
            Console.WriteLine("Welcome to the Holiday Guessing Game!\n");

            int totalGuesses = 0;
            int correctGuesses = 0;

            while (true)
            {
                Random random = new Random();
                int holidayIndex = random.Next(holidays.Length);
                string holiday = holidays[holidayIndex];
                string holidayDate = holidayDates[holidayIndex];

                Console.WriteLine("What is the date of the following holiday: " + holiday);

                string userGuess = Console.ReadLine();

                totalGuesses++;

                if (userGuess == holidayDate)
                {
                    Console.WriteLine("\u001b[32mCongratulations! You guessed correctly.\n\u001b[0m");
                    correctGuesses++;
                }
                else
                {
                    Console.WriteLine("\u001b[31mSorry, that is incorrect.\u001b[0m The date of " + holiday + " is " + holidayDate + ".\n");
                }

                Console.WriteLine("Enter any key to continue, otherwise enter \"n\" to quit");
                string playAgain = Console.ReadLine();

                if (playAgain == "n")
                {
                    Console.WriteLine("\nThanks for playing!");
                    Console.WriteLine("\u001b[33;1mYou guessed correctly " + correctGuesses + " out of " + totalGuesses + " total guesses.\u001b[0m");

                    break;


                }

            }
        }

        static void BirthdayCalcu()
        {
            string YorN;
            Console.WriteLine("\u001b[32mYou've chosen to Calculate your Age\u001b[0m");
            Console.WriteLine("The Program will wants to get your Personal Information...");
            Console.WriteLine("Are you willing to share your details?[\u001b[32mAgree\u001b[0m or \u001b[31mDisagree\u001b[0m]");

            YorN = Console.ReadLine();

            if (YorN == "Agree")
            {
                char rpt;
                do
                {
                    int Bday, Bmonth, Byear, UpdYears, UpdMonths, UpdDays, UpdHours, UpdWeeks;
                    Console.WriteLine("\nPlease answer in numeric format (e.g. 23-2-2000)");
                    Console.WriteLine("What exact day is your Birthday?");
                    Bday = Convert.ToInt32(Console.ReadLine());

                    Console.WriteLine("When is your Birth Month?");
                    Bmonth = Convert.ToInt32(Console.ReadLine());

                    Console.WriteLine("When is your Birth Year?");
                    Byear = Convert.ToInt32(Console.ReadLine());



                    //
                    DateTime today = DateTime.Today;
                    DateTime nextBirthday = new DateTime(today.Year, Bmonth, Bday);

                    if (nextBirthday < today)
                    {
                        nextBirthday = nextBirthday.AddYears(1);
                    }

                    int daysUntilNextBirthday = (nextBirthday - today).Days;


                    string dayOfWeek = nextBirthday.DayOfWeek.ToString();

                    Console.WriteLine("\nYour upcoming Birthday is on " + nextBirthday.ToShortDateString() + ".");
                    Console.WriteLine(daysUntilNextBirthday + " days remaining until your next Birthday, that will happen on " + dayOfWeek + " of the week.");


                    DateTime getcal = DateTime.Today;
                    int year = getcal.Year;
                    UpdYears = year - Byear;
                    UpdMonths = 12 * UpdYears;
                    UpdWeeks = 4 * UpdMonths;
                    UpdDays = 7 * UpdWeeks;
                    UpdHours = 24 * UpdDays;

                    Console.WriteLine("          _______________________________________");
                    Console.WriteLine("         |\x1B[4mSummary of your Age in terms of the ff.\u001b[0m|");

                    Console.WriteLine("\nYour expected age in years is " + UpdYears + " in this current year.");
                    Console.WriteLine("Your expected age in months is " + UpdMonths + " in this current year.");
                    Console.WriteLine("Your expected age in weeks is " + UpdWeeks + " in this current year.");
                    Console.WriteLine("Your expected age in days is " + UpdDays + " in this current year.");
                    Console.WriteLine("Your expected age in hours is " + UpdHours + " in this current year.");

                    Console.WriteLine("\nDo you want to Calculate your age again [Y/N]?");
                    rpt = Console.ReadKey().KeyChar;


                }
                while (rpt == 'y' || rpt == 'Y');

            }
        }


        static char GetYesNo()
        {
            char MainMenu = Console.ReadKey().KeyChar;
            return MainMenu;
        }
    }

}
